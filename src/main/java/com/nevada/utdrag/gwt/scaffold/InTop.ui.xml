<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:image field="front_logo"></ui:image>

	<ui:style>
		.title {
			font-size: 14px;
			color: rgb(122, 179, 36);
			float: left;
			margin-top: 40px;
			margin-left: 20px;
		}
		
		.top {
			margin-top: 1.5em;
		}
		
		@sprite .front_logo {
			gwt-image: 'front_logo';
			float: left;
		}
		
		.buttonDiv {
			text-align: right;
		}
		
		a.button:link {
			background-color: #454545;
			color: #FFFFFF;
		}
		
		a.button:visited {
			background-color: #454545;
		}
		
		a.button:hover {
			background-color: #a1eb18;
			color: #FFFFFF;
		}
		
		a.button:active {
			background-color: #a1eb18;
		}
		
		.button {
			font-weight: bold;
			text-decoration: none;
			margin-left: 10px;
			padding: 7px;
			-moz-border-radius: 10px;
			-webkit-border-radius: 10px;
			float: right;
			margin-top: 35px;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class='{style.top}'>

			<div class='{style.buttonDiv}'>
				<div class='{style.front_logo}' href='javascript:;'></div>
				<div class='{style.title}'>Sveriges största och enklaste "utdragstjänst"</div>
			</div>

			<div class='{style.buttonDiv}'>
				<g:Anchor styleName='{style.button}' href='javascript:;'
					ui:field='logout'>logga ut</g:Anchor>
				<g:Anchor styleName='{style.button}' href='javascript:;'
					ui:field="graph">diagram</g:Anchor>
				<g:Anchor styleName='{style.button}' href='javascript:;'
					ui:field="input">inmatning</g:Anchor>
			</div>

		</div>
	</g:HTMLPanel>
</ui:UiBinder> 